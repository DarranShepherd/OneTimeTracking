{
    "manifest_version": 2,
    "name": "Combine for Harvest/TP",
    "short_name": "Combine",
    "version": "1.0.5",
    "description": "A simple Harvest + TP timesheet manager for Google Chrome",
    "homepage_url": "https://github.com/NewOrbit/OneTimeTracking",
    "minimum_chrome_version": "22",
    "background": {
        "scripts": [
            "js/vendor/sugar/release/sugar.min.js",
            "js/prototype-extensions.js",
            "js/vendor/underscore/underscore-min.js",
            "js/vendor/jquery/dist/jquery.min.js",
            "js/jquery.hexcolors.js",
            "js/harvest.js",
            "js/background_application.js",
            "js/background.js",
            "js/google-analytics.js",
            "js/TargetProcess.js"
        ]
    },
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html",
        "default_title":"Click here!"
    },
    "icons": {
        "48": "img/app_icon_48.png",
        "64": "img/app_icon_64.png",
        "128": "img/app_icon_128.png"
    },
    "options_page": "options.html",
    "permissions": [
        "storage",
        "https://*.harvestapp.com/",
        "https://*.tpondemand.com/"
    ]
}
